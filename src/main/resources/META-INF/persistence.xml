<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="ru.ezhov.jpa.editor.test" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>ru.ezhov.jpa.editor.domain.model.Customer</class>
        <class>ru.ezhov.jpa.editor.domain.model.Order</class>
        <class>ru.ezhov.jpa.editor.domain.model.OrderItem</class>
        <class>ru.ezhov.jpa.editor.domain.model.Product</class>
        <class>ru.ezhov.jpa.editor.domain.model.Supplier</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/.ru.ezhov.jpa-editor/sample"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value="sa"/>
            <property name="auto-commit" value="true"/>
        </properties>
    </persistence-unit>
</persistence>